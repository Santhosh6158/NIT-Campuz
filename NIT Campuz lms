        function scrollToSection(sectionId) {
            document.getElementById(sectionId).scrollIntoView({ 
                behavior: 'smooth' 
            });
        }

        function showDemo() {
            alert('ğŸš€ Demo Environment\n\nAccess the live demo at:\nâ€¢ Web: http://localhost:8000\nâ€¢ API: http://localhost:8000/api/docs/\nâ€¢ Admin: http://localhost:8000/admin/\n\nUse the default credentials provided below to log in.');
        }

        function openApiDocs(type) {
            const urls = {
                swagger: 'http://localhost:8000/api/docs/',
                redoc: 'http://localhost:8000/api/redoc/',
                schema: 'http://localhost:8000/api/schema/'
            };
            
            alert(`ğŸ“– API Documentation\n\nOpening ${type.toUpperCase()} documentation:\n${urls[type]}\n\nNote: Make sure your development server is running on localhost:8000`);
        }

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // Add scroll effect to navbar
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('nav');
            if (window.scrollY > 100) {
                navbar.classList.add('bg-white/95', 'backdrop-blur-sm');
            } else {
                navbar.classList.remove('bg-white/95', 'backdrop-blur-sm');
            }
        });
    </script>
